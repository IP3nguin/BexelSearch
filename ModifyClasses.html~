	<script>
		
		var database = firebase.database();
		var rootRef = firebase.database().ref().child("Class");
		var ClassInstructor;
		var ClassTitle;
		var Description;
		var Email;
		var Facebook;
		var Location;
		var Phone;
		var Twitter;
		var Website;
		rootRef.once('value', function(snap){
			
			ClassInstructor = snap.child("ClassInstructor").val();
			ClassTitle = snap.child("ClassTitle").val();
			Description = snap.child("Description").val();
			Email = snap.child("Email").val();
			Facebook = snap.child("Facebook").val();
			Location = snap.child("Location").val();
			Phone = snap.child("Phone").val();
			Twitter = snap.child("Twitter").val();
